{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "test": "jest",
    "build": "esbuild src/index.ts --bundle --minify --sourcemap --loader:.png=dataurl --loader:.svg=text --target=chrome58,firefox57,safari11,edge16 --outdir=build",
    "watch": "esbuild src/index.ts --bundle --loader:.png=dataurl --loader:.svg=text --outdir=build --watch",
    "stylelint": "npx stylelint **/*.css",
    "prettier": "npx prettier --write src/",
    "prettier:check": "npx prettier --check",
    "lint": "eslint --ext js,jsx,ts,tsx src",
    "lint:fix": "eslint --ext js,jsx,ts,tsx src --fix"
  },
  "lint-staged": {
    "**/*.css": [
      "stylelint",
      "prettier --write --ignore-unknown"
    ],
    "**/*.scss": [
      "stylelint --syntax=scss",
      "prettier --write --ignore-unknown"
    ],
    "**/*.ts?(x)": [
      "npm run lint:fix",
      "prettier --write --ignore-unknown"
    ]
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "chokidar": "^3.5.1",
    "eslint": "^7.26.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.23.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "prettier": "2.3.0",
    "stylelint": "^13.13.1",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-config-standard": "^22.0.0"
  },
  "dependencies": {
    "esbuild": "^0.11.20"
  }
}
